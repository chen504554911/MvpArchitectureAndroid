<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_get_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取新闻" />

    <TextView
        android:id="@+id/tv_show_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_get_sp_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取登录用户" />

    <TextView
        android:id="@+id/tv_show_sp_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_set_db_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入db user用户" />

    <Button
        android:id="@+id/btn_get_db_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询db user用户" />

    <TextView
        android:id="@+id/tv_show_db_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>